<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
>

    <android.support.v7.widget.CardView
        android:id="@+id/mission_mode_story"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin" android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:clickable="true" app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mission_mode_story"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundTint="@android:color/black"
            android:gravity="center" android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif" android:text="Story Mode"
                android:textColor="@android:color/white"
                android:textSize="30sp" android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/mission_mode_training"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:clickable="true" app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mission_mode_training"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundTint="@android:color/black"
            android:gravity="center" android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training Mode" android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
