<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:orientation="vertical" android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_bar_header_bg"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:scaleType="centerCrop" app:srcCompat="@drawable/side_nav_bar"/>
    <ImageView
        android:id="@+id/user_ava"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:elevation="24dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"/>
    <TextView
        android:id="@+id/user_level_nav_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_ava"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@drawable/style_nav_bar_level"
        android:fontFamily="sans-serif" android:paddingEnd="8dp"
        android:paddingStart="8dp" android:text="Lv.2" android:textColor="@android:color/white"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_level_nav_bar"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:text="UserName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</RelativeLayout>
